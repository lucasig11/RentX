{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@shared/*": [
                "shared/*"
            ],
            "@modules/*": [
                "modules/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@docs/*": [
                "docs/*"
            ]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["./jest.setup.ts"]
}
